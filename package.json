{
	"name": "react-accordion-ts",
	"version": "1.2.0",
	"description": "A ReactJS Accordion component",
	"main": "dist/index.js",
	"style": "src/panel.css",
	"types": "dist/index.d.ts",
	"scripts": {
		"clear": "rm -rf dist",
		"start": "tsc -w",
		"build": "yarn clear && tsc --build tsconfig.json",
		"test": "jest",
		"lint": "eslint 'src/**/*.{ts,tsx}' 'demo/**/*.{ts,tsx}' '__tests__/**/*.{ts,tsx}'",
		"prod": "yarn lint && yarn build && yarn test"
	},
	"keywords": [
		"React",
		"Accordion",
		"Typescript",
		"Widget"
	],
	"author": "Atanas Atanasov <scriptex.bg@gmail.com> (https://atanas.info)",
	"repository": "https://github.com/scriptex/react-accordion-ts",
	"bugs": {
		"url": "https://github.com/scriptex/react-accordion-ts/issues",
		"email": "scriptex.bg@gmail.com"
	},
	"license": "MIT",
	"dependencies": {},
	"peerDependencies": {
		"react": "^16.9.0 || ^17 || ^18",
		"react-dom": "^16.9.0 || ^17 || ^18"
	},
	"devDependencies": {
		"@types/jest": "29.0.0",
		"@types/react": "18.0.18",
		"@types/react-dom": "18.0.6",
		"@types/react-test-renderer": "18.0.0",
		"@typescript-eslint/eslint-plugin": "5.36.2",
		"@typescript-eslint/parser": "5.36.2",
		"cssnano": "5.1.13",
		"eslint": "8.23.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-jest": "27.0.1",
		"eslint-plugin-react": "7.31.6",
		"eslint-plugin-react-hooks": "4.6.0",
		"jest": "29.0.2",
		"postcss": "8.4.16",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-test-renderer": "18.2.0",
		"ts-jest": "28.0.8",
		"tslib": "2.4.0",
		"tslint": "6.1.3",
		"tslint-react": "5.0.0",
		"typescript": "4.8.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"\\.(ts|tsx)$": "ts-jest"
		},
		"testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
	}
}
