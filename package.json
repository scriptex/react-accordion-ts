{
	"name": "react-accordion-ts",
	"version": "0.2.0",
	"description": "A ReactJS Accordion component",
	"main": "dist/index.js",
	"style": "src/panel.css",
	"scripts": {
		"clear": "rm -rf dist",
		"start": "tsc -w",
		"build": "yarn clear && tsc --build tsconfig.json",
		"test": "jest",
		"lint": "tslint -c tslint.json --project tsconfig.json",
		"prepare": "yarn lint && yarn build && yarn test"
	},
	"keywords": [
		"React",
		"Accordion",
		"Typescript",
		"Widget"
	],
	"author": "Atanas Atanasov <scriptex.bg@gmail.com> (https://atanas.info)",
	"repository": "https://github.com/scriptex/react-ion",
	"bugs": {
		"url": "https://github.com/scriptex/react-ion/issues",
		"email": "scriptex.bg@gmail.com"
	},
	"license": "MIT",
	"dependencies": {
		"react": "16.7.0",
		"react-dom": "16.7.0"
	},
	"peerDependencies": {
		"react": "16.7.0",
		"react-dom": "16.7.0"
	},
	"devDependencies": {
		"@types/jest": "23.3.13",
		"@types/react": "16.7.22",
		"@types/react-dom": "16.0.11",
		"@types/react-test-renderer": "16.0.3",
		"jest": "24.0.0",
		"react-test-renderer": "16.7.0",
		"ts-jest": "23.10.5",
		"tslint": "5.12.1",
		"tslint-react": "3.6.0",
		"typescript": "3.3.1"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
	}
}
