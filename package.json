		"Typescript",
		"Widget"
	],
	"author": "Atanas Atanasov <scriptex.bg@gmail.com> (https://atanas.info)",
	"repository": "https://github.com/scriptex/react-accordion-ts",
	"bugs": {
		"url": "https://github.com/scriptex/react-accordion-ts/issues",
		"email": "scriptex.bg@gmail.com"
	},
	"license": "MIT",
	"dependencies": {},
	"peerDependencies": {
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	},
	"devDependencies": {
		"@types/jest": "27.4.1",
		"@types/react": "18.0.1",
		"@types/react-dom": "18.0.0",
		"@types/react-test-renderer": "18.0.0",
		"cssnano": "5.1.7",
		"jest": "27.5.1",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"react-test-renderer": "^18.0.0",
		"ts-jest": "27.1.4",
		"tslint": "6.1.3",
		"tslint-react": "5.0.0",
		"typescript": "4.6.3"
	},
	"jest": {
		"moduleFileExtensions": [
