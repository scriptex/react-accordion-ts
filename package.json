{
	"name": "react-accordion-ts",
	"version": "0.2.0",
	"description": "A ReactJS Accordion component",
	"main": "dist/index.js",
	"style": "src/panel.css",
	"scripts": {
		"clear": "rm -rf dist",
		"start": "tsc -w",
		"build": "yarn clear && tsc --build tsconfig.json",
		"test": "jest",
		"lint": "tslint -c tslint.json --project tsconfig.json",
		"prepare": "yarn lint && yarn build && yarn test"
	},
	"keywords": [
		"React",
		"Accordion",
		"Typescript",
		"Widget"
	],
	"author": "Atanas Atanasov <scriptex.bg@gmail.com> (https://atanas.info)",
	"repository": "https://github.com/scriptex/react-accordion-ts",
	"bugs": {
		"url": "https://github.com/scriptex/react-accordion-ts/issues",
		"email": "scriptex.bg@gmail.com"
	},
	"license": "MIT",
	"dependencies": {
		"react": "16.13.1",
		"react-dom": "16.13.1"
	},
	"peerDependencies": {
		"react": "16.13.1",
		"react-dom": "16.13.1"
	},
	"devDependencies": {
		"@types/jest": "26.0.9",
		"@types/react": "16.9.46",
		"@types/react-dom": "16.9.8",
		"@types/react-test-renderer": "16.9.3",
		"jest": "26.4.0",
		"react-test-renderer": "16.13.1",
		"ts-jest": "26.2.0",
		"tslint": "6.1.3",
		"tslint-react": "5.0.0",
		"typescript": "3.9.7"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
	}
}
